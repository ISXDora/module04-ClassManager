{% extends 'layout.njk' %}

{% block content%}
<div class="card table-container">
    <a href="/members/create">Novo</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Professores</th>
                <th>Especialidades</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for teacher in teachers%}
            <tr>
                <td>
                    <span style="background-image: url({{teacher.avatar_url}})"></span>
                    {{teacher.name}}
                </td>
                <td>
                    <span>{{teacher.services | replace(", ", " - ")}}</span>
                </td>
                
                <td><a href="/teachers/{{teacher.id}}">Ver</a></td>
            </tr>
            {%endfor%}
        </tbody>
    </table>
</div>

{% endblock %}