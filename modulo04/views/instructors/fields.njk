<div class="items">
            <div class="item">
            <div>Avatar URL</div>
            <div>
                <input 
                    type="url" 
                    name="avatar_url"
                    placeholder="http://"
                    value="{{teacher.avatar_url}}">
            </div>
            </div>
            <div class="item">
            <div>Nome Completro</div>
            <div>
                <input 
                    type="text" 
                    name="name"
                    placeholder="Nome do professor"
                    value="{{teacher.name}}">
            </div>
            </div>

         <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                    type="date" 
                    name="birth" 
                    value="{{teacher.birth}}">
            </div>
        </div>

         <div class="item">
            <div>Grau de Escolaridade</div>
            <div>
                <select 
                    name="schooling"
                    >{%if teacher.schooling == "Ensino Médio Completo"%}
                    <option value="Ensino Médio Completo">Ensino Médio Completo</option>
                    {%elif teacher.schooling == "Ensino Superior Completo"%}
                    <option value="Ensino Superior Completo">Ensino Superior Completo</option>
                    {%else%}
                    <option value="Mestrado e Doutorado" >Mestrao e Doutorado</option>
                    {% endif %}
                </select>                    
            </div>
        </div>

         <div class="item">
            <div>Tipo de Aula</div>
            <div>
               
               <span>
                    <input 
                        type="radio" 
                        name="modality"
                        value="P" 
                        {%if teacher.modality == "P"%}
                            checked
                        {% endif %}           
                    >
                    Presencial
               </span>

               <span>
                    <input 
                        type="radio" 
                        name="modality"
                        value="D"
                        {% if teacher.modality =="D" %}
                            checked
                        {% endif%}
                    >
                    À distância
               </span>
            </div>
        </div>

         <div class="item">
            <div>Área de atuação</div>
            <div>
                <input 
                    type="text" 
                    name="services"
                    placeholder="Separe a área de atuação por vírgula"
                    value="{{teacher.services}}">
            </div>
        </div>
        <button type="submit">Salvar</button>

        </div>