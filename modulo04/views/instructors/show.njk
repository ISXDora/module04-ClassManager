{% extends 'layout.njk' %}

{% block content%}
<div class="card">
    <section 
    class="avatar" 
    style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Detalhes</h3>
        <div class="items">
            <div class="item">
            <div>Nome completo</div>
            <div>{{teacher.name}}</div>
        </div>

         <div class="item">
            <div>Idade</div>
            <div>{{teacher.birth}}</div>
        </div>

         <div class="item">
            <div>Grau de Escolaridade</div>
            <div>{{teacher.schooling}}</div>
        </div>

         <div class="item">
            <div>Tipo de Aula</div>
            <div>{{teacher.modality}}</div>
        </div>

         <div class="item">
            <div>Acompanhamento</div>
            <div>
                {% for service in teacher.services%}
                <span>{{service}}</span>
                {% endfor%}
            </div>
        </div>

         <div class="item">
            <div>Desde</div>
            <div>{{teacher.created_at}}</div>
        </div>

        </div>
    </section>
</div>

{% endblock %}