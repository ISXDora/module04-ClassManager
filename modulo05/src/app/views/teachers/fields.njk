<div class="items">
            <div class="item">
            <div>Avatar URL</div>
            <div>
                <input 
                    type="url" 
                    name="avatar_url"
                    placeholder="http://"
                    value="{{teacher.avatar_url}}">
            </div>
            </div>
            <div class="item">
            <div>Nome Completro</div>
            <div>
                <input 
                    type="text" 
                    name="name"
                    placeholder="Nome do professor"
                    value="{{teacher.name}}">
            </div>
            </div>

         <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                    type="date" 
                    name="birth_date" 
                    value="{{teacher.birth_date}}">
            </div>
        </div>

         <div class="item">
            <div>Grau de Escolaridade</div>
            <div>
                <select 
                    name="education_level"
                    >
                    <option 
                        value="Ensino Médio Completo"{%if teacher.schooling == "Ensino Médio Completo"%}
                        selected {%endif%}>Ensino Médio Completo
                    </option>
                    <option 
                        value="Ensino Superior Completo" {%if teacher.schooling == "Ensino Superior Completo"%}
                        selected {%endif%}>Ensino Superior Completo
                    </option>
                    <option 
                        value="Mestrado e Doutorado"{%if teacher
                        .schooling == "Mestrado e Doutorado"%} 
                        selected {%endif%} >Mestrao e Doutorado
                    </option>
                </select>                    
            </div>
        </div>

         <div class="item">
            <div>Tipo de Aula</div>
            <div>
               
               <span>
                    <input 
                        type="radio" 
                        name="class_type"
                        value="P" 
                        {%if teacher.modality == "P"%}
                            checked
                        {% endif %}           
                    >
                    Presencial
               </span>

               <span>
                    <input 
                        type="radio" 
                        name="class_type"
                        value="D"
                        {% if teacher.modality =="D" %}
                            checked
                        {% endif%}
                    >
                    À distância
               </span>
            </div>
        </div>

         <div class="item">
            <div>Especialidade(s)</div>
            <div>
                <input 
                    type="text" 
                    name="subjects_taught"
                    placeholder="Separe a área de atuação por vírgula"
                    value="{{teacher.subjects_taught}}">
            </div>
        </div>
        </div>