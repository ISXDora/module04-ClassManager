{% extends 'layout.njk' %}

{% block content%}
<div class="card">
    <section 
    class="avatar" 
    style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Detalhes</h3>
        <div class="items">
            <div class="item">
            <div>Nome completo</div>
            <div>{{teacher.name}}</div>
        </div>

         <div class="item">
            <div>Idade</div>
            <div>{{teacher.birth_date}}</div>
        </div>

         <div class="item">
            <div>Grau de Escolaridade</div>
            <div>{{teacher.education_level}}</div>
        </div>

         <div class="item">
            <div>Tipo de Aula</div>
            <div>{{"Presencial" if teacher.class_type == "P" else "À Distância"}}</div>
        </div>

         <div class="item">
            <div>Acompanhamento</div>
            <div>
               <span>{{teacher.subjects_taught| replace(",", " - ")}}</span>
            </div>
        </div>

         <div class="item">
            <div>Desde</div>
            <div>{{teacher.created_at}}</div>
        </div>
        <a class="button"href="/teachers/{{ teacher.id}}/edit" >Editar</a>
    </section>
</div>

{% endblock %}