{% extends 'layout.njk' %}

{% block content%}
<div class="card">
    <section 
    class="avatar" 
    style="background: url({{student.avatar_url}}) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Detalhes</h3>
        <div class="items">
            <div class="item">
            <div>Nome</div>
            <div>{{student.name}}</div>
        </div>

        <div class="item">
            <div>E-mail</div>
            <div>{{student.email}}</div>
        </div>

        <div class="item">
            <div>Anivers√°rio</div>
            <div>{{student.birth}}</div>
        </div>

        <div class="item">
            <div>Ano Escolar</div>
            <div>{{student.schoolYear}}</div>
        </div>

        <div class="item">
            <div>Horas de Aula por Semana</div>
            <div>{{student.workload}}hs</div>
        </div>

        <a class="button"href="/students/{{ student.id}}/edit" >Editar</a>
    </section>
</div>

{% endblock %}